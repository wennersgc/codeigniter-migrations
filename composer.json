{
	"description": "The CodeIgniter framework",
	"name": "codeigniter/framework",
	"type": "project",
	"homepage": "https://codeigniter.com",
	"license": "MIT",
	"support": {
		"forum": "http://forum.codeigniter.com/",
		"wiki": "https://github.com/bcit-ci/CodeIgniter/wiki",
		"slack": "https://codeigniterchat.slack.com",
		"source": "https://github.com/bcit-ci/CodeIgniter"
	},
	"require": {
		"php": ">=5.5",
		"illuminate/database": "^7.5",
		"illuminate/events": "^7.5"
	},
	"suggest": {
		"paragonie/random_compat": "Provides better randomness in PHP 5.x"
	},
	"require-dev": {
		"phpunit/phpunit": "4.* || 5.*"
	},
  "scripts": {
	"cria-migration": "php index.php matches create:migration",
	"executa-migration": "php index.php matches do:migration",
	"desfaz-migration": "php index.php matches undo:migration",
	"reseta-migration": "php index.php matches reset:migration"
  },
  "autoload": {
	"classmap": ["application/models/"]
  }

}
